<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app_card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app_card:cardUseCompatPadding="true"
            android:layout_marginTop="5dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/controom1"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Superior Room"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/cont_room1_title"
                    android:textSize="22sp"
                    android:padding="18dp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/cont_room1_con"
                    android:layout_height="wrap_content"

                    android:padding="18dp"
                    android:gravity="center_horizontal"
                    android:text="@string/cont_room1"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/asiana_room_1"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/round_white"
                    android:text="BOOK"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app_card:cardUseCompatPadding="true"
            android:layout_marginTop="5dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/controom2"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Premium Room"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:id="@+id/cont_room2_title"
                    android:padding="18dp"

                    android:textStyle="italic"
                    android:typeface="serif"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:id="@+id/cont_room2_con"
                    android:gravity="center_horizontal"

                    android:text="@string/cont_room_2"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/asiana_room_2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/round_white"
                    android:text="BOOK"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app_card:cardUseCompatPadding="true"
            android:layout_marginTop="5dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/controom3"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sapphire Suite"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/cont_room3_title"
                    android:padding="18dp"

                    android:textStyle="italic"
                    android:typeface="serif"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:id="@+id/cont_room3_con"
                    android:gravity="center_horizontal"
                    android:text="@string/cont_room_3"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/asiana_room_3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/round_white"
                    android:text="BOOK"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app_card:cardUseCompatPadding="true"
            android:layout_marginTop="5dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/controom4"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Topaz Suite"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/cont_room4_title"
                    android:padding="18dp"

                    android:textStyle="italic"
                    android:typeface="serif"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cont_room4_con"
                    android:padding="18dp"
                    android:gravity="center_horizontal"
                    android:text="@string/cont_room_4"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/asiana_room_4"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/round_white"
                    android:text="BOOK"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>

</ScrollView>