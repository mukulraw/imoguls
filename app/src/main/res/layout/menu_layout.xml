<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"              android:layout_width="match_parent"              android:background="#fff"              android:layout_height="match_parent">    <include        layout="@layout/header_layout"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="18dp"        android:id="@+id/click_hotel"        android:gravity="center_vertical"        android:drawableEnd="@drawable/down"        android:text="Our Hotels"        android:textColor="@color/colorPrimaryDark"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingStart="36dp"        android:paddingEnd="36dp"        android:paddingTop="18dp"        android:id="@+id/menu_asiana"        android:paddingBottom="18dp"        android:visibility="gone"        android:gravity="center_vertical"        android:text="Kohinoor Asiana"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingStart="36dp"        android:paddingEnd="36dp"        android:visibility="gone"        android:paddingTop="18dp"        android:id="@+id/menu_continental"        android:paddingBottom="18dp"        android:gravity="center_vertical"        android:text="Kohinoor Continental"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingStart="36dp"        android:paddingEnd="36dp"        android:visibility="gone"        android:paddingTop="18dp"        android:id="@+id/menu_elite"        android:paddingBottom="18dp"        android:gravity="center_vertical"        android:text="Kohinoor Elite"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="18dp"        android:text="Promo Codes"        android:drawableStart="@drawable/inbox"        android:drawablePadding="18dp"        android:id="@+id/menu_promo_code"        android:gravity="center_vertical"        android:textColor="#000"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="18dp"        android:textColor="#000"        android:text="Log out"        android:id="@+id/menu_log_out"        android:drawableStart="@drawable/log_out"        android:gravity="center_vertical"        android:drawablePadding="18dp"        /></LinearLayout>