<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_asiana"
    android:layout_width="match_parent"
              android:orientation="vertical"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:fitsSystemWindows="true">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabs_asiana"
                android:layout_centerVertical="true"
                style="@style/AppTabLayout"
                />


        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/left"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:id="@+id/asiana_left"
            />

        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:id="@+id/asiana_right"
            />

    </RelativeLayout>
            <internetmoguls.com.imoguls.MyViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pager_asiana"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />



    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:minHeight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/book_background"
        android:id="@+id/book_button"
        android:textColor="@color/colorAccent"
        />




</RelativeLayout>
