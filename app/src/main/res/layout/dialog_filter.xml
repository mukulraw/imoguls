<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/filter_dialog_all"
        android:padding="18dp"
        android:text="ALL"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/filter_dialog_asiana"
        android:padding="18dp"
        android:textColor="#000"
        android:text="KOHINOOR ASIANA"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/filter_dialog_continental"
        android:textColor="#000"
        android:padding="18dp"
        android:text="KOHINOOR CONTINENTAL"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/filter_dialog_elite"
        android:padding="18dp"
        android:textColor="#000"
        android:text="KOHINOOR ELITE"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:padding="18dp"
        android:gravity="center"
        android:layout_gravity="end"
        android:id="@+id/filter_ok"
        android:textColor="@color/colorAccent"
        />

</LinearLayout>